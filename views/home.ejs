<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head.ejs') %>

  <body>
    <%- include('./components/navbar.ejs') %>
    <div class="container my-3">
      <h3 class="text-decoration-underline">Home Page</h3>

      <% if (blogs.length > 0) { %>
      <ul>
        <% blogs.forEach(blog => { %>
        <li>
          <h4><%= blog.title %></h4>
          <p><%= blog.content %></p>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p>No blogs available.</p>
      <% } %>
    </div>
  </body>
</html>
