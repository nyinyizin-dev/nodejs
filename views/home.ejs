<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <body>
    <%- include('./components/navbar.ejs') %>
    <h1>Home Page</h1>

    <% if (blogs.length > 0) { %>
    <ul>
      <% blogs.forEach(blog => { %>
      <li>
        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No blogs available.</p>
    <% } %>
  </body>
</html>
